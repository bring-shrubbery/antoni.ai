---
interface Props {
  title: string;
  description: string;
  image: string;
}

const { title, description, image } = Astro.props;
---

<div class="flex gap-8 bg-primary rounded-full p-10 pr-8 shadow-default">
  <img
    class="w-32 h-32 rounded-full border-alternate border-8"
    src={image}
    alt="avatar"
    width={256}
    height={256}
  />
  <div>
    <h1 class="text-xl font-bold mb-2">{title}</h1>
    <p>{description}</p>
  </div>
</div>
