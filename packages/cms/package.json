{
  "name": "@turbulence/cms",
  "version": "0.1.0",
  "description": "A framework-agnostic, self-contained CMS using Web Standards",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./next": {
      "types": "./dist/next.d.ts",
      "import": "./dist/next.js"
    }
  },
  "files": [
    "dist",
    "static",
    "drizzle"
  ],
  "scripts": {
    "build": "pnpm db:generate && tsdown && node build.js",
    "build:client": "node build.js",
    "build:lib": "tsdown",
    "dev": "tsdown --watch",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "cms",
    "admin",
    "headless",
    "react",
    "web-standards",
    "trpc",
    "drizzle",
    "better-auth"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bring-shrubbery/antoni.cv"
  },
  "dependencies": {
    "@trpc/client": "^11.7.2",
    "@trpc/server": "^11.7.2",
    "better-auth": "^1.4.5",
    "drizzle-orm": "^0.45.0",
    "pg": "^8.16.3",
    "superjson": "^2.2.6",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.22",
    "drizzle-kit": "^0.31.8",
    "esbuild": "^0.27.1",
    "postcss": "^8.5.6",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "tailwindcss": "^4.1.17",
    "tsdown": "^0.12.6",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "next": ">=14.0.0"
  },
  "peerDependenciesMeta": {
    "next": {
      "optional": true
    }
  }
}
